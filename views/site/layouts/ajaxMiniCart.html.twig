{% if cart.tovars %}
    <div class="dropdown-menu dropdown-cart-menu pull-right clearfix mainMiniCart" role="menu" style="">
        <p class="dropdown-cart-description">Recently added item(s).</p>
        <ul class="dropdown-cart-product-list">
            {% for tovar in cart.tovars %}
                <li class="item clearfix">
                    <a href="#" title="Delete item" class="delete-item deleteWithBasket" data-id="{{ tovar.lid }}"
                       data-price="{{ tovar.price }}"><i class="fa fa-times"></i></a>
                    <a href="/cart" title="Edit item" class="edit-item"><i class="fa fa-pencil"></i></a>
                    <figure>
                        <a href="/tovar/{{ tovar.lid }}"><img src="{{ assets("images/") }}/{{ tovar.img }}"
                                         alt="{{ tovar.name }}"></a>
                    </figure>
                    <div class="dropdown-cart-details">
                        <p class="item-name">
                            <a href="/tovar/{{ tovar.lid }}">{{ tovar.name }}</a>
                        </p>
                        <p>
                            {{ tovar.count }}x
                            <span class="item-price">{{ tovar.price }}</span>
                        </p>
                    </div><!-- End .dropdown-cart-details -->
                </li>
            {% endfor %}
        </ul>

        <ul class="dropdown-cart-total">
            <li><span class="dropdown-cart-total-title">Total:</span>{{ cart.total }}<span
                        class="sub-price">.99</span></li>
        </ul><!-- .dropdown-cart-total -->
        <div class="dropdown-cart-action">
            <p><a href="" class="btn btn-custom-2 btn-block">Cart</a></p>
            <p><a href="" class="btn btn-custom btn-block">Checkout</a></p>
        </div><!-- End .dropdown-cart-action -->
    </div>
{% endif %}