<div class="widget featured">
    <h3>Featured</h3>
    <div class="featured-slider flexslider sidebarslider">
        <ul class="featured-list clearfix">
            {% for tovars in featured %}
                {% if tovars %}
                    <li>
                        {% for tovar in tovars %}
                            <div class="featured-product clearfix">
                                <figure>
                                    <img src="{{ assets("images/") }}/{{ tovar.img }}"
                                         alt="{{ tovar.name }}">
                                </figure>
                                <h5><a href="#">{{ tovar.name }}</a></h5>
                                <div class="ratings-container">
                                    <div class="ratings">
                                        <div class="ratings-result" data-result="84"></div>
                                    </div><!-- End .ratings -->
                                </div><!-- End .rating-container -->
                                <div class="featured-price">{{ currency }}{{ tovar.price }}</div>
                                <!-- End .featured-price -->
                            </div><!-- End .featured-product -->
                        {% endfor %}
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div><!-- End .featured-slider -->
</div><!-- End .widget -->
